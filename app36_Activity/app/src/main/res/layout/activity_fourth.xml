<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".FourthActivity">
    <Button
            android:onClick="skip2Second"
            android:text="跳转到第二个界面"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:onClick="deliverObject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="传递对象到另外一个界面"/>

    <Button
            android:onClick="skip2Call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打电话到10086"/>

    <Button
            android:onClick="skip2SendMSG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发短信到10086"/>

    <Button
            android:id="@+id/recharge_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="电话费充值"/>

    <TextView
            android:textColor="@color/design_default_color_error"
            android:id="@+id/pay_result"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>
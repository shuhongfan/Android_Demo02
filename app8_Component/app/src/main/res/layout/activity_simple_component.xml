<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SimpleComponentActivity">

    <TextView
            android:text="这是TextView的内容"
            android:background="#999"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:id="@+id/tv_simple_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

    <EditText
            android:hint="请输入手机号"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_simple_number"/>

    <Button
            android:text="提交"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_simple_submit"/>

    <ImageView
            android:src="@android:drawable/ic_media_play"
            android:background="@android:drawable/alert_dark_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_simple_play"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爱好"/>

        <CheckBox
                android:text="篮球"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_simple_basket"/>

        <CheckBox
                android:text="足球"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_simple_foot"/>

        <CheckBox
                android:text="乒乓"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_simple_pingpang"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:onClick="confirm"/>
    </LinearLayout>

    <RadioGroup
            android:id="@+id/rg_simple_sex"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RadioButton
                android:text="男"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:id="@+id/rb_simple_male"/>

        <RadioButton
                android:text="女"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_simple_female"/>

        <RadioButton
                android:text="未知"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_simple_nofemale"/>
    </RadioGroup>




</androidx.appcompat.widget.LinearLayoutCompat>